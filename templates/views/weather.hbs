<!DOCTYPE html>
<html lang="en">
<head>
    {{>links}}
    <title>Weather</title>
</head>
<body>
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                   <form action="" class="temp_form">
                       <input type="text" id="cityname" placeholder="Enter your city name" autocomplete="off">
                       <input type="submit" value="submit" id="submitbtn">
                   </form>
               </div> 
               <div class="tempinfo">
                   <div class="top_layer">
                       <p id="day">tuesday</p>
                       <p id="today_date">13oct</p>
                   </div>
                   <div class="main_layer">
                       <p id="city_name">get output here</p>
                       <div class="middle_layer data_hide">
                           <p id="temp"><span id="temp_real_val">0</span><sup>0</sup> </p>
                           <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                       </div>
                   </div>
               </div>
            </div>
        </div>
    </div>
{{>footer}}
<script src="js/main.js"></script>
</body>
</html>
